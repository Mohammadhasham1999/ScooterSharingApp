<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_rides_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/list_scooters_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="40dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/floating_add_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/blue"
            android:src="@drawable/ic_baseline_add_24"
            android:elevation="12dp"
            tools:ignore="SpeakableTextPresentCheck">

    </com.google.android.material.floatingactionbutton.FloatingActionButton>


    <Button
            android:text="@string/start_ride_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/start_ride_button"
            android:background="@drawable/btn_shape_round"
            app:icon="@drawable/ic_baseline_play_arrow_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            android:layout_marginTop="48dp"
            app:layout_constraintBottom_toTopOf="@+id/list_scooters_button"
            app:layout_constraintTop_toTopOf="parent" />

    <Button
            android:text="@string/list_scooters_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/list_scooters_button"
            android:background="@drawable/btn_shape_round"
            app:icon="@drawable/ic_baseline_format_list_bulleted_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/start_ride_button"
            android:layout_marginTop="32dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
