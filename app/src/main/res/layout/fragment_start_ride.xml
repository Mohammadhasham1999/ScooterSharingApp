<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:id="@+id/edit_text_location"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:drawableStart="@drawable/ic_baseline_add_location_24"
            android:inputType="text"
            android:background="@drawable/edittext_border"
            android:paddingLeft="8dp"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_text_name"
            android:layout_marginTop="32dp"
            tools:ignore="SpeakableTextPresentCheck" />

    <EditText
            android:id="@+id/edit_text_name"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:drawableStart="@drawable/ic_baseline_electric_scooter_24"
            android:inputType="text"
            android:background="@drawable/edittext_border"
            android:hint="@string/edit_text_name"
            android:paddingLeft="8dp"
            android:drawablePadding="70dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    <Button
            android:text="Done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/done_button"
            app:layout_constraintEnd_toEndOf="@+id/edit_text_location"
            app:layout_constraintTop_toBottomOf="@+id/edit_text_location"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:backgroundTint="#3bc639"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="32dp" />

    <Button
            android:text="Cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cancel_button"
            app:layout_constraintStart_toStartOf="@+id/edit_text_location"
            app:layout_constraintTop_toBottomOf="@+id/edit_text_location"
            android:layout_marginTop="16dp"
            android:layout_marginStart="24dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:backgroundTint="#FF0000"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="32dp" />

    <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/scooter_image_view"
            tools:srcCompat="@tools:sample/avatars"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" />

    <ImageButton
            android:layout_width="83dp"
            android:layout_height="76dp"
            app:srcCompat="@drawable/ic_photo_camera"
            android:id="@+id/scooter_camera"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/scooter_image_view"
            android:layout_marginTop="16dp"
            tools:ignore="SpeakableTextPresentCheck" />


</androidx.constraintlayout.widget.ConstraintLayout>
